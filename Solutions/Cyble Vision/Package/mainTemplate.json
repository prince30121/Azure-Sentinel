{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspace": {
      "type": "string",
      "metadata": {
        "description": "Log Analytics workspace name"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "cyble_api_key": {
      "type": "string",
      "metadata": {
        "description": "Cyble API Key for authentication"
      }
    },
    "iocEnrichmentDefinition": {
      "type": "object",
      "defaultValue": {},
      "metadata": {
        "description": "Definition for the Cyble IOC Enrichment playbook"
      }
    },
    "threatIntelDefinition": {
      "type": "object",
      "defaultValue": {},
      "metadata": {
        "description": "Definition for the Cyble Threat Intelligence Ingestion playbook"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Logic/workflows",
      "apiVersion": "2019-05-01",
      "name": "Cyble-IOC-Enrichment-Playbook",
      "location": "[parameters('location')]",
      "properties": {
        "definition": "[parameters('iocEnrichmentDefinition')]",
        "parameters": {
          "cyble_api_key": {
            "value": "[parameters('cyble_api_key')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Logic/workflows",
      "apiVersion": "2019-05-01",
      "name": "Cyble-Threat-Intel-Ingestion-Playbook",
      "location": "[parameters('location')]",
      "properties": {
        "definition": "[parameters('threatIntelDefinition')]",
        "parameters": {
          "cyble_api_key": {
            "value": "[parameters('cyble_api_key')]"
          }
        }
      }
    }
  ],
  "outputs": {}
}
